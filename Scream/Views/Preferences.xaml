<Page x:Class="Scream.Preferences" xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
      xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Scream"
      xmlns:res="clr-namespace:Scream.Resources"
      xmlns:con="clr-namespace:Scream.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="{x:Static res:Strings.Preferences}">
    <Page.Resources>
        <con:IntString x:Key="cvtintstring" />
    </Page.Resources>
    <ScrollViewer>
        <Grid Margin="0" x:Name="Grid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="{adonisUi:Space 2}" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="{x:Static res:Strings.Preferences}" FontSize="18" />
            <WrapPanel HorizontalAlignment="Right">
                <Button x:Name="ButtonSave" Content="{x:Static res:Strings.Save}" Margin="{adonisUi:Space 0}" Click="Button_Click" />
            </WrapPanel>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="{adonisUi:Space 1}" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="{adonisUi:Space 2}" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="{adonisUi:Space 2}" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="{adonisUi:Space 2}" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="{adonisUi:Space 1}" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="{x:Static res:Strings.Settings}" />
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="{adonisUi:Space 1}" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="{adonisUi:Space 1}" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <Label Content="{x:Static res:Strings.LocalHTTPPort}" FontWeight="Normal" />
                                <TextBox Width="140" Text="{Binding HTTP,Converter={StaticResource cvtintstring}}" ToolTip="{x:Static res:Strings.PACInstruction}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <Label Content="{x:Static res:Strings.LocalSocks5Port}" FontWeight="Normal" />
                                <TextBox Width="140"  Text="{Binding SOCKS5,Converter={StaticResource cvtintstring}}" ToolTip="{x:Static res:Strings.PACInstruction}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="4">
                                <Label Content="{x:Static res:Strings.loglevel}" FontWeight="Normal" />
                                <ComboBox x:Name="ComboBoxLogLevel"  SelectedIndex="{Binding LogLevelIndex}" Width="103" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="{adonisUi:Space 1}" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="DNS"/>
                        <WrapPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBox Width="400" Height="24" AcceptsReturn="True" Text="{Binding DNS}" ToolTip="{x:Static res:Strings.ListInstruction}" />
                        </WrapPanel>
                    </Grid>
                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="{adonisUi:Space 1}" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="{x:Static res:Strings.Bypass}"/>
                        <WrapPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBox Width="400" Height="90" AcceptsReturn="True" Text="{Binding Bypass}" TextWrapping="Wrap" ToolTip="{x:Static res:Strings.BypassInstruction}" />
                        </WrapPanel>
                    </Grid>
                    <Grid Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="{adonisUi:Space 1}" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Content="{x:Static res:Strings.Subscription}" />
                        <WrapPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBox Width="400" Height="90" AcceptsReturn="True" Text="{Binding Subscription}" TextWrapping="Wrap" ToolTip="{x:Static res:Strings.PACInstruction}"/>
                        </WrapPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Column="2">
                    <GroupBox  Width="180"  Padding="{adonisUi:Space 2, 1.5}">
                        <Grid>
                            <StackPanel>
                                <Label  Content="Core"/>
                                <TextBlock x:Name="TextBlockCoreVersion" TextWrapping="WrapWithOverflow"/>
                                <Separator Margin="{adonisUi:Space 0, 2, 0, 2}"/>
                                <Label Grid.Row="0" Content="{x:Static res:Strings.Mode}"/>
                                <TextBlock x:Name="TextBlockMode" TextWrapping="WrapWithOverflow"/>
                                <Separator Margin="{adonisUi:Space 0, 2, 0, 2}"/>
                                <Label  Content="{x:Static res:Strings.Outbounds}"/>
                                <TextBlock x:Name="TextBlockOutBounds" TextWrapping="WrapWithOverflow"/>
                                <Separator Margin="{adonisUi:Space 0, 2, 0, 2}"/>
                                <Label  Content="{x:Static res:Strings.Rules}"/>
                                <TextBlock x:Name="TextBlockRoute" TextWrapping="WrapWithOverflow"/>
                                <Separator Margin="{adonisUi:Space 0, 2, 0, 2}"/>
                                <Label  Content="{x:Static res:Strings.loglevel}"/>
                                <TextBlock x:Name="TextBlockLogLevel" TextWrapping="WrapWithOverflow"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
            
        </Grid>
    </ScrollViewer>
</Page>
